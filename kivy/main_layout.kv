#:import MDScreen kivymd.uix.screen.MDScreen
#:import MDBottomNavigation kivymd.uix.bottomnavigation.MDBottomNavigation
#:import MDBottomNavigation kivymd.uix.bottomnavigation.MDBottomNavigationItem

# Import local components
#:import TtsBox screens.tts.TtsBox
#:import SettingsBox screens.setting.SettingsBox

# Include your other KV files

MDScreen:

    MainScreenBox:
        orientation: 'vertical'
        padding: 0, self.top_pad, 0, self.bottom_pad
        MDBottomNavigation:
            id: bottom_navigation_bar
            panel_color: "#edcffa"
            selected_color_background: "orange"
            text_color_active: "black"

            MDBottomNavigationItem:
                id: nav_tts
                name: 'tts'
                text: 'Text to Speach'
                icon: 'speaker-wireless'
                badge_icon: "numeric-0"

                TtsBox:
                    id: tts_screen

            MDBottomNavigationItem:
                id: nav_settings
                name: 'settings'
                text: 'Settings'
                icon: 'wrench'

                SettingsBox:
                    id: settings_scroll

# End